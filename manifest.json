{
  "name": "Random Bookmark",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome extension to open random bookmark from specific folder",
  "homepage_url": "https://github.com/dmytroyarmak/random-bookmark-chrome-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Open random bookmark"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "bookmarks"
  ]
}
